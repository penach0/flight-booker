<h1>Flights Booker</h1>

<%= form_with url: flights_path, method: :get do |f| %>
    <div>
        <%= f.label :departure_airport %>
        <%= f.select(:departure_airport, @airport_options)%>
    </div>

    <div>
        <%= f.label :arrival_airport %>
        <%= f.select(:arrival_airport, @airport_options)%>
    </div>

    <div>
        <%= f.label :passengers %>
        <%= f.select(:passengers, [*1..4])%>
    </div>

      
    <div>
        <%= f.label :date %>
        <%= select_tag(:date, options_for_select(@date_options)) %>
    </div>


    <%= f.submit "Search" %>
<% end %>